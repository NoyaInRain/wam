{
    "download": "https://github.com/discourse/discourse.git#stable",
    "packages": {
        "apt": ["postgresql-contrib", "libpq-dev", "libxml2", "imagemagick"],
        "bundler": []
    },
    "databases": ["postgresql", "redis"],
    "config_files": {
        "config/discourse.conf": [
            "db_host = localhost",
            "db_name = {databases_postgresql_name}",
            "db_username = {databases_postgresql_user}",
            "db_password = {databases_postgresql_secret}",
            "hostname = \"{id}\"",
            "redis_db = {databases_redis_name}",
            "serve_static_assets = true",
            "serve_static_files = true",
            "developer_emails = {email}"
        ]
    }
    "jobs": {
        {"cmd": "bundle exec rails server -e production", "cwd": "{path}"},
        {"cmd": "bundle exec sidekiq -e production", "cwd": "{path}"}
    }

    "data_dirs": ["log", "public/uploads", "tmp"],
    "hooks": "discourse.py"
}
